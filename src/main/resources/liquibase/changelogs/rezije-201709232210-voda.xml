<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="201709232217" author="ifarszky">
        <createSequence sequenceName="voda_seq" minValue="1" incrementBy="1" />

        <createTable tableName="voda">
            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="voda_pk"/>
            </column>
            <column name="kucanstvo" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="mjesec" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="godina" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="datum_unosa" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="brojilo" type="INT">
                <constraints nullable="false" foreignKeyName="voda_brojilo_fk" references="voda_brojilo(id)"/>
            </column>
            <column name="konstante" type="INT">
                <constraints nullable="false" foreignKeyName="voda_konstante_fk" references="voda_konstante(id)"/>
            </column>
            <column name="iznos" type="INT">
                <constraints nullable="false" foreignKeyName="voda_iznos_fk" references="voda_iznos(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>